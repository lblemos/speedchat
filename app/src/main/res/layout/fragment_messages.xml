<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weverson.speedchat.presentation.messages.MessagesFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:paddingBottom="50dp"
        android:scrollbars="vertical" />

    <FrameLayout
        android:id="@+id/frame_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/edit_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nano"
            android:layout_marginEnd="@dimen/x_margin"
            android:layout_marginStart="@dimen/nano"
            android:layout_marginTop="@dimen/nano"
            android:layout_gravity="bottom"
            android:hint="@string/msg_enter_the_message"
            android:maxLines="3"
            android:scrollbars="vertical" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_add_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end|bottom"
            android:layout_margin="@dimen/nano"
            android:src="@drawable/ic_send"
            app:fabSize="mini" />

    </FrameLayout>

</RelativeLayout>
